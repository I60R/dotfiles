[alias]
  switch = "!f(){ git symbolic-ref HEAD refs/heads/$1 && git reset $1; }; f"
  setup  = "!f(){ for s in $@; do for b in $(git branch --list "*$s/*"); do git checkout $b -- .; echo "+$b"; done; done; }; f"
  track  = "!f(){ for b in $(git branch -r | grep "$1/" | sed "s/$1\\\\///g"); do git branch --track $b $1/$b; done; }; f"

[url "https://github.com/"]
  insteadOf = gh:
[url "https://gitlab.com/"]
  insteadOf = gl:

[credential]
  helper = cache --timeout=300

