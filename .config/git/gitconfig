[color]
  ui = true

[push]
  default = simple

[pull]
  rebase = true

[rebase]
  autoStash = true

[rerere]
  enabled = true

[core]
  compression = 9
  editor = nvr --remote-wait-silent

[diff]
  tool = icdiff

[difftool "icdiff"]
  cmd = icdiff -r $LOCAL $REMOTE | $PAGER
